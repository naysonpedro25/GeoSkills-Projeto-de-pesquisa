<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/prfile_alert_bg"
    android:layout_height="wrap_content"
    android:paddingHorizontal="30dp"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/title_next_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_title_explanation_positive"
        android:fontFamily="@font/plumpfull"
        android:paddingHorizontal="23dp"
        android:paddingVertical="10dp"
        android:text="Você acertou"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/text_next_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1+"
        android:layout_marginHorizontal="15dp"
        android:textAllCaps="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/plumpfull"
        android:textAlignment="center"
        android:textSize="40sp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"

        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_next_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.NoShadow"
        android:background="@drawable/btn_login_bg"
        android:fontFamily="@font/plumpfull"
        android:paddingVertical="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:text="Próximo"
        android:paddingHorizontal="50dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:drawableEnd="@drawable/arrow_white_right"/>





</LinearLayout>