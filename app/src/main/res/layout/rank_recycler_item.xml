<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="10dp"
    android:background="@drawable/rank_item_bg"
    android:elevation="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="4dp"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/img_medal_rank"
        android:layout_width="55dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="10dp"
        android:adjustViewBounds="true"
        android:padding="5dp"
        android:src="@drawable/medal_1"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text_position_rank"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/plumpfull"
        android:text="10ยบ"
        android:layout_gravity="center_vertical"
        android:textSize="50sp"
        android:layout_marginTop="-2dp"
        />

    <TextView
        android:id="@+id/text_name_user_rank"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:text="username3dkfogldkfkf"
        android:textSize="19dp"
        android:textAlignment="center"
        android:maxLength="15"
        android:fontFamily="@font/plumpfull"
        android:layout_gravity="center"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/gray"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="10dp"
        android:layout_gravity="center"
        app:contentPaddingBottom="5dp"
        app:contentPaddingTop="5dp"
        app:contentPaddingLeft="10dp"
        android:textAlignment="center"
        app:contentPaddingRight="10dp"


        >

        <TextView
            android:id="@+id/text_points_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/plumpfull"/>


    </androidx.cardview.widget.CardView>




</LinearLayout>