<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="25dp"
    android:layout_height="wrap_content"
    android:background="@drawable/setting_alert_bg"
    android:orientation="vertical"
    android:paddingHorizontal="30dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_title_setting_alert"
        android:fontFamily="@font/plumpfull"
        android:paddingHorizontal="23dp"
        android:paddingVertical="10dp"
        android:text="Configurações"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sound_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_sound"
                android:padding="12dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_sound"/>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sons"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/plumpfull"
                android:textSize="15sp"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/music_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_music"
                android:padding="12dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_music"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Música"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/plumpfull"
                android:textSize="15sp"
                android:textAlignment="center"/>

        </LinearLayout>


    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_singOut"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginVertical="40dp"
        android:background="@drawable/btn_recover_bg"
        android:fontFamily="@font/plumpfull"
        android:paddingHorizontal="24dp"
        android:stateListAnimator="@null"
        android:text="Sair da conta"
        android:textColor="@color/white"
        android:textSize="14sp" />

</LinearLayout>